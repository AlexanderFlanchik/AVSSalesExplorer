<Page x:Class="AVSSalesExplorer.Pages.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AVSSalesExplorer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="AVS Sales Explorer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="1" Grid.Column="1" Rows="1" Columns="2">
            <Button x:Name="ItemListLink" Content="Товары" Margin="0,0,1,0" Click="ItemListLink_Click"/>
            <Button x:Name="SaleListLink" Content="Продажи" Margin="1,0,0,0"  Click="SaleListLink_Click"/>
        </UniformGrid>
    </Grid>
</Page>